#!/bin/bash

# Enable UTF-8 / non-ASCII character support (e.g. ä, ö, å)
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

# Case insensitive tab completion
set completion-ignore-case on

# Show all completion options on first Tab press instead of needing to press twice
set show-all-if-ambiguous on

# Add trailing slash when autocompleting symlinks to directories
set mark-symlinked-directories on

# If there are more than 200 possible completions, ask before showing them all
set completion-query-items 200

# Show file type indicators in completion list, like ls -F (e.g. / for dirs)
set visible-stats on

# Arrow keys search history based on what you've already typed
"\e[A": history-search-backward
"\e[B": history-search-forward

$if Bash
    # Smarter completion - don't duplicate text already after the cursor
    set skip-completed-text on

    # Colour the completion list by file type, like ls
    set colored-stats on
$endif